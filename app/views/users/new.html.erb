<h1>Sign up!</h1>

<%= form_for :user do |f| %>
    <%= f.label 'Username' %>
    <%= f.text_field :name %>
    
    <%= f.label 'Password' %>
    <%= f.password_field :password %>

    <%= f.label 'Confirm your password' %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>